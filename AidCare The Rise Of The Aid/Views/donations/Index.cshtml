@model IEnumerable<AidCare_The_Rise_Of_The_Aid.Models.donation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
       <tr>
                <th>
                     <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionsortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Donation Description</a>
                </th>
                <th>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["IntSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Donation Amount</a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.donationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.donationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.donationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
